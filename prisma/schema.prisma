// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Paciente {
  cedula           Int      @id
  nombre           String
  apellido         String
  fecha_nacimiento DateTime
  telefono         String
  Cita             Cita[]
}

model Medico {
  tarjeta_profesional         Int           @id
  nombre                      String
  apellido                    String
  consultorio                 String
  correo                      String
  id_Especialidad             Int
  Cita                        Cita[]
  
  Especialidad                Especialidad? @relation(fields: [especialidadId_Especialidad], references: [id_Especialidad])
  especialidadId_Especialidad Int?
}

model Cita {
  id_Cita                   Int       @id
  fecha                     DateTime
  cedula_Paciente           Int
  tarjeta_Profesional       Int

  Paciente                  Paciente? @relation(fields: [pacienteCedula], references: [cedula])
  pacienteCedula            Int?
  Medico                    Medico?   @relation(fields: [medicoTarjeta_profesional], references: [tarjeta_profesional])
  medicoTarjeta_profesional Int?
}

model Especialidad {
  id_Especialidad Int      @id
  nombre          String
  Medico          Medico[]
}
